{# User registration form template #}
{% extends "layout.jinja" %}
{% block title %}
    <title>{{ title_host }} &raquo; Registration</title>
{% endblock %}
{% block main %}
<main>
    <h2>Registration</h2>
    {# Benefit list explaining account features #}
    <ul>
        <li>Registering will give you a username and profile.</li>
        <li>You will be able to set a time zone.</li>
        <li>Your username will have to be approved.</li>
    </ul>
    {# Registration form with grid layout #}
    {% if user.ban_expires_at %}
    <p class="system">You are banned from registering until {{ user.ban_expires_at }}.</p>
    {% endif %}
    <form method="post">
        <fieldset class="grid"{{ " disabled" if user.ban_expires_at }}>
            {# Hidden session token for CSRF protection #}
            <input type="hidden" name="session_token" value="{{ user.session_token }}">
            {# Username field with character limit #}
            <label for="username">Username:</label>
            <input id="username" type="text" name="username" maxlength="16" autocomplete="username">
            {# Password field with security constraints #}
            <label for="password">Password:</label>
            <input id="password" type="password" name="password" maxlength="64" autocomplete="new-password">
            {# Password confirmation field for validation #}
            <label for="confirm-password">Confirm password:</label>
            <input id="confirm-password" type="password" name="confirm_password" maxlength="64" autocomplete="new-password">
            {# Remember me option (checked by default) #}
            <div class="checkbox-container">
                <input type="checkbox" checked name="year" id="login-year">
                <label for="login-year">Stay logged in for a year</label>
            </div>
            <button type="submit">Register</button>
        </fieldset>
    </form>
</main>
{% endblock %}
