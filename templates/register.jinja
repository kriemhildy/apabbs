        {% extends "layout.jinja" %}
        {% block main %}
        <h3>Registration</h3>
        <ul>
            <li>Registering will give you a username and profile.</li>
            <li>You will be able to set a time zone.</li>
        </ul>
        <form action="/register" method="post">
            <input type="hidden" name="session_token" value="{{ user.session_token }}">
            <label>
                Username:
                <br>
                <input type="text" name="username" maxlength="16" size="16" autocomplete="username">
            </label>
            <br>
            <label>
                Password:
                <br>
                <input type="password" name="password" maxlength="64" size="32" autocomplete="new-password">
            </label>
            <br>
            <label>
                Confirm password:
                <br>
                <input type="password" name="confirm_password" maxlength="64" size="32" autocomplete="new-password">
            </label>
            <div class="checkbox-container">
                <input type="checkbox" checked name="year" id="login-year">
                <label for="login-year">Stay logged in for a year</label>
            </div>
            <input type="submit" value="Register">
        </form>
        {% endblock %}
