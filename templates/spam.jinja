{# Page for listing and adding spam terms #}
{% extends "layout.jinja" %}
{% block title %}
    <title>{{ title_host }} &raquo; Spam Terms</title>
{% endblock %}
{% block main %}
<main>
    <h2>Spam Terms</h2>
    <form method="post" action="/spam/add-term">
        {# Hidden session token for CSRF protection #}
        <input type="hidden" name="session_token" value="{{ user.session_token }}">
        {# Input field for new spam term #}
        <label for="term">Spam Term:</label>
        <input id="term" type="text" name="term" maxlength="256" required>
        <button type="submit">Add Term</button>
    </form>
    {% if spam_terms %}
    <ul>
        {% for spam_term in spam_terms %}
        <li>{{ spam_term.term }}</li>
        {% endfor %}
    </ul>
    {% else %}
    <p>No spam terms yet.</p>
    {% endif %}
</main>
{% endblock %}

