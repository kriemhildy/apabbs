                {% if post.media_category == "image" %}
                {% set solo_path = "/" + post.key %}
                {% if solo %}
                <img src="{{ media_path }}" alt="{{ post.media_file_name }}">
                {% else %}
                <a href="{{ solo_path }}">
                    <img src="{{ media_path }}" alt="{{ post.key }}">
                </a>
                {% endif %}
                {% elif post.media_category == "video" %}
                <video controls>
                    <source src="{{ media_path }}" type="{{ post.media_mime_type }}">
                    {{ post.media_file_name }}
                </video>
                {% elif post.media_category == "audio" %}
                <audio controls>
                    <source src="{{ media_path }}" type="{{ post.media_mime_type }}">
                    {{ post.media_file_name }}
                </audio>
                {% endif %}
