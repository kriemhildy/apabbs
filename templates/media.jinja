{% set category = post.media_category_opt %}
{% set filename = post.media_filename_opt %}
{% set width = post.media_width_opt %}
{% set height = post.media_width_opt %}
{% set media_path = media_path_opt %}
{% set mime_type = post.media_mime_type_opt %}
<div class="media">
    {% if category == "image" %}
    {% set solo_path = "/post/" + key %}
    {% if solo %}
    <img src="{{ media_path }}" alt="Image {{ filename }}" width="{{ width }}" height="{{ height }}">
    {% else %}
    <a href="{{ solo_path }}"><img src="{{ media_path }}" alt="Post {{ key }}"></a>
    {% endif %}
    {% elif category == "video" %}
    <video controls>
        <source src="{{ media_path }}" type="{{ mime_type }}">
        Video {{ filename }}
    </video>
    {% elif category == "audio" %}
    <audio controls>
        <source src="{{ media_path }}" type="{{ mime_type }}">
        Audio {{ filename }}
    </audio>
    {% endif %}
</div>
