{% extends "layout.jinja" %}
{% block body %}
<body>
    <section id="forms">
        <h2>schizo.land</h2>
        <form action="/post" method="post">
            <textarea name="body"></textarea>
            <br>
            <input type="submit" value="Post">
        </form>
        {% if username is none %}
        <p class="system"><a href="/login">log in</a> or <a href="/register">register</a></p>
        {% else %}
        <form action="/logout" method="post">
            <span class="system">
                logged in as: <strong>{{ username }}</strong>
                {% if admin %}
                (admin)
                {% endif %}
            </span>
            <input type="submit" value="Log out">
        </form>
        {% endif %}
        <form action="/hash" method="post">
            <span class="system">your anon hash: {{ anon_hash }}</span>
            <input type="submit" value="Generate new hash">
        </form>
    </section>
    <main>
        {% for post in posts %}
        {% include "post.jinja" %}
        {% endfor %}
    </main>
</body>
{% endblock %}
