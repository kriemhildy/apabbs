        {% extends "layout.jinja" %}
        {% block main %}
        {% if query_post is none %}
        <form action="/submit-post" method="post" enctype="multipart/form-data" data-fetch>
            <textarea name="body"></textarea>
            <br>
            <label for="media">Media:</label>
            <input type="file" name="media" id="media">
            <br>
            <input type="submit" value="Post" id="post-submit">
            {% if logged_in %}
            <input type="checkbox" name="anon" id="anon" {{ "checked" if anon }}>
            <label for="anon">Post anonymously</label>
            {% endif %}
        </form>
        {% endif %}
        <div id="posts"{{ ' class="solo"' if solo }}>
            {% for post in posts %}
            {% include "post.jinja" %}
            {% endfor %}
        </div>
        {% if prior_page_post %}
        <p><a href="/page/{{ prior_page_post.uuid }}" class="system">Prior page</a></p>
        {% endif %}
        {% endblock %}
