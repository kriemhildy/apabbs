{% extends "layout.jinja" %}
{% block body %}
<body>
    <section id="forms">
        <h2>{{ title }}</h2>
        <ul class="system">
            {% if not logged_in %}
            <li><a href="/login">log in</a> or <a href="/register">register</a></li>
            {% else %}
            <li>
                <form action="/logout" method="post">
                    logged in as: <strong>{{ username }}</strong>
                    {% if admin %}
                    (admin)
                    {% endif %}
                    <input type="submit" value="Log out">
                </form>
            </li>
            {% endif %}
            <li>
                <form action="/hash" method="post">
                    <span class="system">anon hash: <strong>{{ anon_hash }}</strong></span>
                    <input type="submit" value="New hash">
                </form>
            </li>
        </ul>
        <form action="/post" method="post">
            <textarea name="body"></textarea>
            <br>
            <input type="submit" value="Post" id="post-button">
            {% if logged_in %}
            <input type="checkbox" name="anon" id="anon" {{ " checked" if anon }}>
            <label for="anon">Post anonymously</label>
            <br>
            {% endif %}
        </form>
    </section>
    <main>
        {% for post in posts %}
        {% include "post.jinja" %}
        {% endfor %}
    </main>
</body>
{% endblock %}
